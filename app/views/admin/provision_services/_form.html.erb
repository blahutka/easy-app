<%= simple_form_for [:admin, @service_provider, @provision_service], :html => {:class => 'form-horizontal'} do |f| %>
    <div class="modal-body">
      <%= f.association :service_provider, :as => :select,
                        :hint => "#{link_to "+ #{t('views.admin.add_new')}".html_safe,
                                            new_admin_service_provider_path, :target => '_blank', remote: true}".html_safe,
                        :input_html => {:disabled => @service_provider.present?} %>

      <% link_add_category = link_to("+ #{t('views.admin.add_new')} &nbsp;&nbsp;<i class=\"icon-share\"></i>".html_safe,
                                     new_admin_product_category_path, :target => '_blank', remote: false) %>

      <%= f.input :product_category_id, :collection => ProductCategory.all,
                  :hint => "#{link_add_category}".html_safe %>
      <%= f.input :product_brand_id, :collection => ProductBrand.all,
                  :hint => "#{link_to "+ #{t('views.admin.add_new')}", new_admin_product_brand_path, remote: true}".html_safe %>
      <%= f.input :primary_provider, :as => :select %>
      <legend>Provize</legend>
      <%= f.input :percentage, :as => :integer, :input_html => {class: ''} %>
      <%= f.input :money, :as => :string, :input_html => {class: ''} %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, 'UloÅ¾it' %>
    </div>
<% end %>

<style type="text/css">
    .wrapper-inline .control-label { width:auto; }
</style>