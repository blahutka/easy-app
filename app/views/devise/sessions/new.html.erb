<h2>Vstup na účet</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="inputs">
    <%= f.input :email, :required => false, :autofocus => true, :input_html => {} %>
    <%= f.input :password, :required => false, :input_html =>  {}, :label => 'Heslo' %>
    <%#= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Vstup na účet" %>
  </div>
<% end %>

<%= render :partial => "devise/shared/links" %>